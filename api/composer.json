{
    "name": "vovancho/slim-vue-demo",
    "description": "Demo API Task handler application",
    "license": "MIT",
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "doctrine/migrations": "^2.2",
        "doctrine/orm": "^2.7",
        "geekdevs/swift-mailer-extensions": "^2.0",
        "league/oauth2-server": "^8.0",
        "monolog/monolog": "^1.24",
        "php-amqplib/php-amqplib": "^2.11",
        "php-di/php-di": "^6.0",
        "ramsey/uuid": "^3.9",
        "slim/psr7": "^0.5",
        "slim/slim": "^4.1",
        "swiftmailer/swiftmailer": "^6.2",
        "symfony/config": "^5.0",
        "symfony/console": "^5.0",
        "symfony/dotenv": "^5.0",
        "symfony/translation": "^5.0",
        "symfony/validator": "^5.0",
        "webmozart/assert": "^1.6",
        "zendframework/zend-config-aggregator": "^1.2",
        "zircote/swagger-php": "^3.0"
    },
    "require-dev": {
        "doctrine/data-fixtures": "^1.4",
        "phpunit/phpunit": "^7.5"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Api\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Api\\Test\\": "tests/"
        }
    },
    "scripts": {
        "app": "php bin/app.php --ansi",
        "test": "phpunit --colors=always"
    }
}
